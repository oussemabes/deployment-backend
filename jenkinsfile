pipeline {
    agent any

    tools {
        nodejs "node19"
    }

    stages {
        
        stage('Install Dependencies') {
            steps {
                sh 'npm install'
            }
        }

     stage('Docker Login'){
            
            steps {
            withCredentials([usernamePassword(credentialsId: 'DockerId',passwordVariable: 'PASS', usernameVariable: 'USER')]) {
            sh " docker login -u ${USER} -p ${PASS}"
        }  }          
        }
       
        stage('Docker deploy'){
            steps {
               
                sh "docker-compose up -d"
            }
        }
}
}
