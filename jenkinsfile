pipeline {
    agent any

    tools {
        nodejs "node19"
    }

    stages {
        
        stage('Install Dependencies') {
            steps {
                sh 'npm install'
            }
        }
        stage('Build') {
            steps {
                sh 'npm run build'
            }
    }
     stage('Docker Login'){
            
            steps {
            withCredentials([string(credentialsId: 'DockerId',passwordVariable: 'PASS', usernameVariable: 'USER')]) {
            sh "docker login -u ${USER} -p ${PASS}"
        }            
        }
        stage('Docker Push'){
            steps {
                sh "docker push ${USER}/docker_jenkins_springboot:${BUILD_NUMBER}"
            }
        }
        stage('Docker deploy'){
            steps {
               
                sh "docker run -itd -p  8081:8080 anvbhaskar/docker_jenkins_springboot:${BUILD_NUMBER}"
            }
        }
}
}